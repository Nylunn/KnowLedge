<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href={{
      "styles/app.css"
    }}>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produit</title>
  </head>
  <body>
    <div class="nav">
      <nav>
        <ul class="navbar">
          <li><a class="active" href="/">Accueil</a></li>
          {% if app.user %}
          <li><a href="/products">Boutique</a></li>
          <li><a href="/cart">Panier</a></li>
          <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
          {% if is_granted('ROLE_ADMIN') %}
          <li><a href="{{ path('app_admin') }}">Tableau de bord</a></li>
          {% endif %} {% else %}
          <li><a href="/register">S'inscrire</a></li>
          <li><a href="/login">Se connecter</a></li>
          {% endif %}
        </ul>
      </nav>
      <div class="bloc">
        <div class="logo_section">
          <img src={{ asset("assets/Logo.png") }} width="100%" alt="Logo" />
          <br />
          <h1 class="slogan">Don't compromise on your look</h1>
        </div>
        <div class="bloc2">
          <h1>Back-Office</h1>
        </div>
      </div>
    </div>
    <br />

    <div class="form-container2">
      <img src={{ asset("assets/1.jpeg") }}
      width="10%" style="padding: 5px;" alt="blackbelt_sweatshirt" />
      <form class="form-content">
        <div class="form-group">
          <label>Nom</label>

          <input class="form-response2" type="text" />
        </div>
        <div class="form-group">
          <label>Prix</label>

          <input class="form-response2" type="text" />
        </div>
        <div class="form-group">
          <label>Stock XS</label>

          <input class="form-response2" type="text" />
        </div>
        <div class="form-group">
          <label>Stock S</label>

          <input class="form-response2" type="text" />
        </div>
        <div class="form-group">
          <label>Stock M</label>

          <input class="form-response2" type="text" />
        </div>
        <div class="form-group">
          <label>Stock L</label>

          <input class="form-response2" type="text" />
          <td></td>
        </div>
        <div class="form-group">
          <label>Stock XL</label>

          <input class="form-response2" type="text" />
          <div class="btn">
            <button type="submit" class="btn-ajouter">AJOUTER</button>
          </div>
        </div>
      </form>
    </div>
    {% block body %} {% if products %} {% for sweatshirt in products %}

    <div class="form-container">
      <img src={{ asset("assets/1.jpeg") }}
      width="10%" style="padding: 5px;" alt="blackbelt_sweatshirt" />
      <form class="form-content">
        <div class="form-group">
          <label>Nom</label>
          <div class="form-response">
            <td>{{ sweatshirt.name }}</td>
          </div>
        </div>
        <div class="form-group">
          <label>Prix</label>
          <div class="form-response">
            <td>{{ sweatshirt.price }}</td>
          </div>
        </div>
        <div class="form-group">
          <label>Stock XS</label>
          <div class="form-response">
            <td>{{ sweatshirt.size }}</td>
          </div>
        </div>
        <div class="form-group">
          <label>Stock S</label>
          <div class="form-response">
            <td>{{ sweatshirt.size }}</td>
          </div>
        </div>
        <div class="form-group">
          <label>Stock M</label>
          <div class="form-response">
            <td>{{ sweatshirt.size }}</td>
          </div>
        </div>
        <div class="form-group">
          <label>Stock L</label>
          <div class="form-response">
            <td>{{ sweatshirt.size }}</td>
            <div class="btn">
              <button type="submit" class="btn-ajouter">MODIFIER</button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Stock XL</label>
          <div class="form-response2">
            <td>{{ sweatshirt.size }}</td>
            <div class="btn">
              <button type="submit" class="btn-ajouter">SUPPRIMER</button>
            </div>
          </div>
        </div>
      </form>
    </div>

    {% endfor %} {% else %}
    <tr>
      <td colspan="2">Pas de sweatshirt pour le moment</td>
    </tr>
    {%endif%} {% endblock body %}
    <footer>
      <a href="/info"><p>Informations de la société</p></a>
    </footer>
  </body>
</html>
