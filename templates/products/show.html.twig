  <body>
    <div class="product_card">
      {% if products %} {% for sweatshirt in products %}
      <tr>
        <img src="{{
          asset("assets/9.jpeg")
        }}" width="100%" alt="pokeball_sweatshirt" />
        <br />
        <td>{{ sweatshirt.name }}</td>
        <br />
        <td>{{ sweatshirt.price }}</td>
        {% if app.user %} {% for sweatshirt in products %}
        <a href="{{ path('app_products_show', { id: sweatshirt.id }) }}">{{
          sweatshirt.name
        }}</a>
        {% endfor %} {% endif %}
        <br />
      </tr>
      {% endfor %} {% else %}
      <tr>
        <td colspan="2">Pas de sweatshirt pour le moment</td>
      </tr>
      {% endif %}
    </div>
    <a href="{{ path('app_products') }}">Retour aux articles</a>
  </body>
