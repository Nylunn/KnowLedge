<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href={{
      "styles/app.css"
    }}>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produit</title>
  </head>
  <body>
    <div class="nav">
      <nav>
        <ul class="navbar">
          <li><a class="active" href="/">Accueil</a></li>
          {% if app.user %}
          <li><a href="/products">Boutique</a></li>
          <li><a href="/cart">Panier</a></li>
          <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
          {% if is_granted('ROLE_ADMIN') %}
          <li><a href="{{ path('app_admin') }}">Tableau de bord</a></li>
          {% endif %} {% else %}
          <li><a href="/register">S'inscrire</a></li>
          <li><a href="/login">Se connecter</a></li>
          {% endif %}
        </ul>
      </nav>
      <img src={{ asset("assets/Logo.png") }} width="10%" alt="Logo" />
      <h1 class="slogan">Don't compromise on your look</h1>
    </div>
    <br />
    {% block body %}
    <div class="show_product">
      <div class="product_card">
        {% if products %} {% for sweatshirt in products %} {% if sweatshirt.id
        == 1 %}
        <tr>
          <img src="{{
            asset("assets/1.jpeg")
          }}" width="100%" alt="blackbelt_sweatshirt" />
          <br />
          <td>{{ sweatshirt.name }}</td>
          <br />
          <td>{{ sweatshirt.price }}</td>
          {% if app.user %}
          <button class="show_product"><a href="#">Voir</a></button>
          {% endif %}
          <br />
        </tr>
        {% endif %} {% endfor %} {% else %}
        <tr>
          <td colspan="2">Pas de sweatshirt pour le moment</td>
        </tr>
        {% endif %}
      </div>

      <div class="product_card">
        {% if products %} {% for sweatshirt in products %} {% if sweatshirt.id
        == 2 %}
        <tr>
          <img src="{{
            asset("assets/1.jpeg")
          }}" width="100%" alt="blackbelt_sweatshirt" />
          <br />
          <td>{{ sweatshirt.name }}</td>
          <br />
          <td>{{ sweatshirt.price }}</td>
          {% if app.user %}
          <button class="show_product"><a href="#">Voir</a></button>
          {% endif %}
          <br />
        </tr>
        {% endif %} {% endfor %} {% else %}
        <tr>
          <td colspan="2">Pas de sweatshirt pour le moment</td>
        </tr>
        {% endif %}
      </div>

      <div class="product_card">
        {% if products %} {% for sweatshirt in products %} {% if sweatshirt.id
        == 3 %}
        <tr>
          <img src="{{
            asset("assets/1.jpeg")
          }}" width="100%" alt="blackbelt_sweatshirt" />
          <br />
          <td>{{ sweatshirt.name }}</td>
          <br />
          <td>{{ sweatshirt.price }}</td>
          {% if app.user %}
          <button class="show_product"><a href="#">Voir</a></button>
          {% endif %}
          <br />
        </tr>
        {% endif %} {% endfor %} {% else %}
        <tr>
          <td colspan="2">Pas de sweatshirt pour le moment</td>
        </tr>
        {% endif %}
      </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    {% endblock body %}
    <footer class="site_footer">
      <a href="/info"><p>Informations de la société</p></a>
    </footer>
  </body>
</html>
